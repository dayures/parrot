#if ( ($element.Version) ||
	  ($element.Date) ||
	  (!$element.creators.isEmpty()) ||
	  (!$element.contributors.isEmpty()) ||
	  ($element.Rights) ||
	  ($element.LicenseLabel) )
  #set( $vci = true )
#else
  #set( $vci = false )
#end


#if ( ($element.Uri) ||
	  ($element.PreferredNamespace) ||
	  ($element.PreferredPrefix) ||
 	  ($element.isDefinedBy) )
  #set( $ti = true )
#else
  #set( $ti = false )
#end


#if ( (!$element.labels.isEmpty()) ||
	  (!$element.relatedDocuments.isEmpty()) )
  #set( $otherinfo = true )
#else
  #set( $otherinfo = false )
#end	


<div class="term">
  <h3><a id="$element.Anchor"></a><span class="parrot-element-title parrot-ontology-title">Ontology: $element.Label</span>
  #if($element.isDeprecated())<span class="deprecated">(Deprecated)</span>#end
    <span class="menu"> 
	  #if ($vci)<span class="vci-menu">Version control Information</span> #end 
	  #if ($ti)<span class="ti-menu">Technical Information</span> #end
	  #if ($otherinfo)<span class="otherinfo-menu">Other information</span> #end
    </span> 
  </h3>

  #parse("html/description.vm")

  <div> 

  #if ($vci)
    <div class="vci"> 
    <h4>Version Control information</h4> 
    <dl> 
		#if($element.Version)
		<dt>Version</dt>
		<dd>$element.Version</dd>
		#end
		
		#if($element.Date)
		<dt>Date</dt>
		<dd class="metadata-icon date">$element.Date</dd>
		#end
	  
		#if(!$element.creators.isEmpty())
		<dt>Creators:</dt>
		#foreach($creator in $element.creators)
		  <dd class="metadata-icon creator">$creator</dd>
		#end
		#end
		
		#if(!$element.contributors.isEmpty())
		<dt>Contributors:</dt>
		#foreach($contributor in $element.contributors)
		  <dd class="metadata-icon contributor">$contributor</dd>
		#end
		#end
		
		#if($element.Rights)
		<dt>Rights</dt>
		<dd>$element.Rights</dd>
		#end
		
		#if($element.LicenseLabel)
		<dt>License</dt>
		<dd><a href="$element.LicenseLabel">$element.LicenseLabel</a></dd>
		#end
    </dl> 
    </div>
  #end

  #if ($ti)
    <div class="ti"> 
    <h4>Technical information</h4> 
    <dl> 
		#if($element.Uri)
		    <dt>URI</dt>
		    <dd><pre>$element.Uri</pre></dd>
		#end    
 
		#if($element.PreferredNamespace)
		    <dt>Preferred Namespace URI</dt>
		    <dd><pre><code>$element.PreferredNamespace</code></pre></dd>
		#end
		
		#if($element.PreferredPrefix)
		    <dt>Preferred Prefix</dt>
		    <dd><pre><code>$element.PreferredPrefix</code></pre></dd>
		#end
		
		#if($element.isDefinedBy)
      		<dt>isDefinedBy</dt>
      		<dd><span class="parrot-element-ref parrot-${element.isDefinedBy.kindString}-ref"><a href="#$element.isDefinedBy.LocalName">$element.isDefinedBy.Label</a></span></dd>
   		#end
    </dl> 
    </div>
  #end
  
  #if ($otherinfo)
    <div class="otherinfo"> 
    <h4>Other information</h4> 
    <dl> 
		#if(!$element.labels.isEmpty())
		<dt>Labels</dt>
		<dd>
		#foreach($element in $element.labels)
		  <span>$element.text</span>#if ($foreach.hasNext), #end
		#end
		</dd>
		#end
		
		#if(!$element.relatedDocuments.isEmpty())
		<dt>Related Documents</dt> 
		<dd>
		#foreach($element in $element.relatedDocuments)
			  #parse("html/relatedDocument-detail.vm")
		#end
		</dd>
		#end
  	</dl>
	</div>
  #end

  </div>
</div>