#if ( ($element.Date) ||
  	  (!$element.creators.isEmpty()) ||
  	  (!$element.contributors.isEmpty()) ||
  	  (!$element.publishers.isEmpty()) )
  #set( $vci = true )
#else
  #set( $vci = false )
#end


#if ( ($element.Uri) ||
	  ($element.Strategy) ||
	  ($element.Priority) || 
	  (!$element.rules.isEmpty()) ||
	  (!$element.ruleSets.isEmpty()) ||
	  ($element.Parent) )
  #set( $ti = true )
#else
  #set( $ti = false )
#end


#if ( (!$element.referencedOntologicalObjects.isEmpty()) ||
  	  (!$element.labels.isEmpty()) ||
  	  (!$element.relatedDocuments.isEmpty()) )
  #set( $otherinfo = true )
#else
  #set( $otherinfo = false )
#end	

<div class="term">
  <h3><a id="$element.Anchor"></a><span class="parrot-element-title parrot-ruleset-title">$element.Label</span> (RuleSet)
    <span class="menu"> 
	  #if ($vci)<span class="vci-menu">Version control Information</span> #end 
	  #if ($ti)<span class="ti-menu">Technical Information</span> #end
	  #if ($otherinfo)<span class="otherinfo-menu">Other information</span> #end
    </span>  
  </h3>

  #parse("html/description.vm")

  <div>
  
  #if ( $vci )
  <div class="vci"> 
  <h4>Version Control information</h4> 
  <dl>
    #if($element.Uri)
    
		#if($element.Date)
		<dt>Date</dt>
		<dd class="metadata-icon date">$element.Date</dd>
		#end
    
		#if(!$element.creators.isEmpty())
		<dt>Creators:</dt>
		#foreach($creator in $element.creators)
		  <dd class="metadata-icon creator">$creator</dd>
		#end
		#end
	   
		#if(!$element.contributors.isEmpty())
		<dt>Contributors:</dt>
		#foreach($contributor in $element.contributors)
		  <dd class="metadata-icon contributor">$contributor</dd>
		#end
		#end
	   
		#if(!$element.publishers.isEmpty())
		<dt>Publishers:</dt>
		#foreach($publisher in $element.publishers)
		  <dd class="metadata-icon publisher">$publisher</dd>
		#end
		#end
    #end   
  </dl>
  </div>
  #end

  #if ( $ti )
  <div class="ti"> 
  <h4>Technical information</h4> 
  <dl>
    #if($element.Uri)
      <dt>URI</dt>
      <dd><pre>$element.Uri</pre></dd>
    #end

    #if($element.Strategy)
      <dt>Strategy</dt>
      <dd>$element.Strategy</dd>
    #end

    #if($element.Priority)
      <dt>Priority</dt>
      <dd>$element.Priority</dd>
    #end
   
    #if(!$element.rules.isEmpty())
      <dt>Rules</dt>
      #foreach($v in $element.rules)
	  <dd><span class="parrot-element-ref parrot-rule-ref"><a href="#$v.LocalName">$v.Label</a></span></dd>
      #end
    #end
   
    #if(!$element.ruleSets.isEmpty())
      <dt>RuleSets</dt>
      #foreach($v in $element.ruleSets)
	  <dd><span class="parrot-element-ref parrot-ruleset-ref"><a href="#$v.LocalName">$v.Label</a></span></dd>
      #end
    #end
   
    #if($element.Parent)
      <dt>is inside of</dt>
	  <dd><span class="parrot-element-ref parrot-${element.Parent.kindString}-ref"><a href="#$element.Parent.localName">$element.Parent.label</a></span></dd>
    #end
  </dl>
  </div>
  #end
 
  #if ( $otherinfo )
  <div class="otherinfo"> 
  <h4>Other information</h4> 
  <dl>
    #if(!$element.referencedOntologicalObjects.isEmpty())
      <dt>Referenced model objects</dt>
      #foreach($v in $element.referencedOntologicalObjects)
	  <dd><a href="#$v.LocalName">$v.Label</a></dd>
      #end
    #end
       
    #if(!$element.labels.isEmpty())
      <dt>Labels</dt>
      <dd>#parse("html/label.vm")</dd>
    #end
   
    #if(!$element.relatedDocuments.isEmpty())
      <dt>Related Documents</dt> 
      <dd>
      #foreach($element in $element.relatedDocuments)
        #parse("html/relatedDocument-detail.vm")
      #end
      </dd>
    #end
  </dl>
  </div>
  #end
  
  </div>
  
</div>
