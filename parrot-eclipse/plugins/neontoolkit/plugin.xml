<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="com.ontoprise.ontostudio.owl.gui.navigator.ontology.OntologyTreeElement"
            id="es.ctic.parrot.eclipse.neontoolkit.ui.contribution">
         <action
               label="Generate Documentation"
               class="es.ctic.parrot.eclipse.neontoolkit.ui.popup.actions.Action"
               enablesFor="1"
               id="es.ctic.parrot.eclipse.neontoolkit.ui.Action">
         </action>
      </objectContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="es.ctic.parrot.eclipse.commands.ProcNeon"
            name="Process Neon Ontology">
      </command>      
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="es.ctic.parrot.eclipse.handlers.ProcNeonHandler"
            commandId="es.ctic.parrot.eclipse.commands.ProcNeon">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="es.ctic.parrot.eclipse.commands.ProcNeon"
               icon="icons/parrot.png"
               label="Generate documentation NEON"
               style="push">
			<visibleWhen>
				<and>
				<count value="+"></count>
			        <iterate ifEmpty="false">
			            <instanceof value="com.ontoprise.ontostudio.owl.gui.navigator.ontology.OntologyTreeElement"/>
			        </iterate>
				</and>
			</visibleWhen>               
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="es.ctic.parrot.parrot-eclipse.view-category"
            name="Parrot">
      </category>
      <view
            category="es.ctic.parrot.parrot-eclipse.view-category"
            class="es.ctic.parrot.eclipse.neontoolkit.views.DocBrowserView"
            icon="icons/parrot.png"
            id="es.ctic.parrot.parrot-eclipse.browser"
            name="Parrot Browser"
            restorable="true">
      </view>
   </extension>


</plugin>
