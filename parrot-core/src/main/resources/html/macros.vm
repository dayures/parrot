#macro( isDefinedBy $type )
	#if($element.isDefinedBy)
		<p>This $type is defined by <span rel="rdfs:isDefinedBy" href="${element.isDefinedBy.getUri()}" #if (!${element.isDefinedBy.isExternalLink()}) class="parrot-element-ref parrot-${element.isDefinedBy.kindString}-ref" #end >#generateLink($element.isDefinedBy)</span></p>		
	#end
#end

#macro( generateLink $reference )
      #if (${reference.isExternalLink()})
        <a class="external-link" href="${uri_base}?documentUri=${reference.getEncodedUri()}#${reference.getLocalName()}">$reference.Label</a>
      #else
      	<a href="#${reference.LocalName}">$reference.Label</a>
      #end
#end

#macro( generateImportLink $reference )
      #if (${reference.isExternalLink()})
        <a class="external-link" href="${uri_base}?documentUri=${reference.getEncodedUri()}#${reference.getLocalName()}">$reference.Uri</a>
      #else
      	<a href="#${reference.LocalName}">$reference.Label</a>
      #end
#end