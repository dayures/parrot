	<organization>
		<name>Fundación CTIC</name>
		<url>http://www.fundacionctic.org/</url>
	</organization>

	<scm>
		<connection>scm:hg:http://parrot-project.hg.sourceforge.net:8000/hgroot/parrot-project/parrot-project</connection>
		<url>http://parrot-project.hg.sourceforge.net/hgweb/parrot-project</url>
	</scm>

	<developers>
		<developer>
			<id>sergio</id>
			<name>Sergio Fernández</name>
			<email>sergio.fernandez@fundacionctic.org</email>
